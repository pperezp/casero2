<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="casero.cl.casero2.VentaFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/lblNomVenta"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:capitalize="words"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/txtDetVenta"
        android:layout_below="@+id/lblNomVenta"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/lblNomVenta"
        android:hint="Detalle mantención:" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="10"
        android:id="@+id/txtPrecioVenta"
        android:hint="Precio TOTAL:"
        android:layout_below="@+id/txtCantPrendas"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/txtDetVenta" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Fecha venta"
        android:id="@+id/btnFechaVenta"
        android:background="#4caf50"
        android:textColor="#ffffff"
        android:layout_below="@+id/txtPrecioVenta"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Crear mantención"
        android:id="@+id/btnCrearVenta"
        android:background="#3f51b5"
        android:textColor="#ffffff"
        android:layout_below="@+id/btnFechaVenta"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/lblFechaVenta" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="[Fecha]"
        android:id="@+id/lblFechaVenta"
        android:paddingTop="10dp"
        android:layout_below="@+id/txtPrecioVenta"
        android:layout_above="@+id/btnCrearVenta"
        android:layout_alignEnd="@+id/txtPrecioVenta"
        android:layout_toEndOf="@+id/btnFechaVenta"
        android:paddingLeft="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="10"
        android:id="@+id/txtCantPrendas"
        android:layout_below="@+id/txtDetVenta"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/txtPrecioVenta"
        android:hint="Prendas:"
        android:layout_alignEnd="@+id/txtDetVenta" />
</RelativeLayout>

